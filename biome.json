{
  "files": {
    "includes": ["**", "!!**/dist", "!!**/.output", "!!**/.vinxi"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "always"
    }
  }
}
